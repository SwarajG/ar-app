    <div class="how-to-apply__content-container">
        <iframe width="310" height="310" src="<%= howToApply.url%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <ul>
            <% howToApply.steps.forEach(function(step) { %>
                <li><p class="how-to-apply-modal__body"><%= step.description%></p></li>
            <% }); %>
        </ul>
    </div>
</div>